// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  PUBLIC
  MEMBER
  ADMIN
}

enum EventType {
  EVERYDAY
  FULL_SPACE_EVERYDAY
  WORKSHOP
  DANCE_EVENT
  JAM
  RETREAT
  FESTIVAL
  SHOW
  MEMBERSHIP_TRAINING
  OTHER
}

enum ProductType {
  TICKET
  WORKSHOP
  MEMBERSHIP
}

enum OrderStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELLED
}

model User {
  id                      Int                   @id @default(autoincrement())
  name                    String?
  email                   String?               @unique
  emailVerified           DateTime?
  image                   String?
  password                String?               // Hashed password for email/password auth
  role                    UserRole              @default(PUBLIC)
  createdAt               DateTime              @default(now())
  updatedAt               DateTime              @updatedAt
  accounts                Account[]
  sessions                Session[]
  orders                  Order[]
  googleCalendarCredential GoogleCalendarCredential?
}

model Account {
  id                Int     @id @default(autoincrement())
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model GoogleCalendarCredential {
  id                Int      @id @default(autoincrement())
  userId            Int      @unique
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  encryptedRefreshToken String   @db.Text // Encrypted refresh token
  googleAccountEmail String
  googleAccountId   String
  selectedCalendarIds String[] @default(["primary"]) // Array of calendar IDs to sync
  syncToken         String?  // For incremental syncs
  lastSyncAt        DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([userId])
}

model Space {
  id          Int          @id @default(autoincrement())
  name        String
  slug        String       @unique
  description String?      @db.Text
  capacity    Int?
  images      String[]     // JSON array of image URLs
  published   Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  events      EventSpace[]
}

model Event {
  id               Int                 @id @default(autoincrement())
  title            String
  slug             String              @unique
  description      String?             @db.Text
  startTime        DateTime
  endTime          DateTime
  type             EventType           @default(OTHER)
  published        Boolean             @default(false)
  capacity         Int?
  productId        Int?
  product          Product?            @relation(fields: [productId], references: [id])
  isRecurring      Boolean             @default(false)
  recurrenceRule   String? // RRULE format (e.g., "FREQ=WEEKLY;BYDAY=MO,WE,FR")
  recurrenceEnd    DateTime?
  googleEventId    String?             // Google Calendar event ID
  googleCalendarId String?             // Which calendar this came from
  googleColorId    String?             // Color from Google Calendar
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt
  spaces           EventSpace[]
  cancellations    EventCancellation[]

  @@unique([googleEventId, googleCalendarId])
  @@index([published, startTime])
  @@index([published, isRecurring])
  @@index([startTime])
  @@index([googleEventId])
}

model EventCancellation {
  id              Int      @id @default(autoincrement())
  eventId         Int
  event           Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  cancelledDate   DateTime // The specific date/time this recurring event instance is cancelled
  createdAt       DateTime @default(now())

  @@unique([eventId, cancelledDate])
  @@index([eventId])
}

model EventSpace {
  id        Int      @id @default(autoincrement())
  eventId   Int
  spaceId   Int
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  space     Space    @relation(fields: [spaceId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([eventId, spaceId])
  @@index([eventId])
  @@index([spaceId])
}

model Product {
  id              Int         @id @default(autoincrement())
  name            String
  description     String?     @db.Text
  type            ProductType
  stripeProductId String?     @unique
  stripePriceId   String?
  price           Int // cents
  active          Boolean     @default(true)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  events          Event[]
  orders          Order[]
}

model MembershipPlan {
  id              Int      @id @default(autoincrement())
  name            String
  description     String?  @db.Text
  stripeProductId String?  @unique
  stripePriceId   String?
  price           Int // cents per month
  interval        String   @default("month")
  active          Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Order {
  id                    Int         @id @default(autoincrement())
  userId                Int?
  user                  User?       @relation(fields: [userId], references: [id])
  productId             Int?
  product               Product?    @relation(fields: [productId], references: [id])
  stripeSessionId       String?     @unique
  stripePaymentIntentId String?
  amount                Int // cents
  status                OrderStatus @default(PENDING)
  createdAt             DateTime    @default(now())
  updatedAt             DateTime    @updatedAt

  @@index([userId])
  @@index([stripeSessionId])
}
