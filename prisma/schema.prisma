// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  PUBLIC
  MEMBER
  ADMIN
}

enum EventType {
  EVERYDAY
  FULL_SPACE_EVERYDAY
  WORKSHOP
  EVENT
  JAM
  RETREAT
  FESTIVAL
  SHOW
  MEMBERSHIP_TRAINING
  MEMBERS_ONLY
  CLOSED
  OTHER
}

enum EventDisplayStyle {
  NORMAL
  VERTICAL
}

enum ProductType {
  TICKET
  WORKSHOP
  MEMBERSHIP
}

enum OrderStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELLED
}

model User {
  id                      Int                   @id @default(autoincrement())
  name                    String?
  email                   String?               @unique
  emailVerified           DateTime?
  image                   String?
  password                String?               // Hashed password for email/password auth
  role                    UserRole              @default(PUBLIC)
  createdAt               DateTime              @default(now())
  updatedAt               DateTime              @updatedAt
  accounts                Account[]
  sessions                Session[]
  orders                  Order[]
  googleCalendarCredential GoogleCalendarCredential?
}

model Account {
  id                Int     @id @default(autoincrement())
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model GoogleCalendarCredential {
  id                Int      @id @default(autoincrement())
  userId            Int?     @unique
  user              User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  encryptedRefreshToken String   @db.Text // Encrypted refresh token
  googleAccountEmail String?
  googleAccountId   String?
  selectedCalendarIds String[] @default(["primary"]) // Array of calendar IDs to sync
  syncToken         String?  // For incremental syncs
  lastSyncAt        DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([userId])
}

model Space {
  id          Int          @id @default(autoincrement())
  name        String
  slug        String       @unique
  description String?      @db.Text
  capacity    Int?
  images      String[]     // JSON array of image URLs
  color       String?      // Tailwind color class (e.g., "blue", "purple", "green")
  published   Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  events      Event[]      // Direct relationship to events
  dailyEvents DailyEvent[] // Daily events for this space
}

model Event {
  id               Int                 @id @default(autoincrement())
  title            String              // Display title (cleaned, without hyphen parts)
  originalTitle    String?             // Full original title from Google Calendar
  slug             String              @unique
  description      String?             @db.Text
  startTime        DateTime
  endTime          DateTime
  type             EventType           @default(OTHER)
  published        Boolean             @default(false)
  canceled         Boolean             @default(false) // Simple boolean for cancellation
  capacity         Int?
  isAllDay         Boolean             @default(false) // For all-day events like CLOSED
  isRecurring      Boolean             @default(false) // For recurring events (e.g., closed every Sunday)
  recurringDays    Int[]               @default([]) // Days of week (0=Sunday, 6=Saturday) for recurring events
  displayStyle     EventDisplayStyle   @default(NORMAL) // How to display the event (normal or vertical text)
  overridesOthers  Boolean             @default(false) // If true, hides other events (for CLOSED days)
  spaceId          Int?                // Direct space relationship - determined by Google Calendar color
  space            Space?              @relation(fields: [spaceId], references: [id])
  googleEventId      String?             // Google Calendar event ID
  googleCalendarId   String?             // Which calendar this came from
  googleColorId      String?             // Color from Google Calendar (determines space)
  preserveManualEdits Boolean           @default(false) // Preserve manual title/description edits during sync
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt

  @@unique([googleEventId, googleCalendarId])
  @@index([published, startTime])
  @@index([startTime])
  @@index([googleEventId])
  @@index([spaceId])
  @@index([type])
  @@index([published, type, startTime])
}



model Product {
  id              Int         @id @default(autoincrement())
  name            String
  description     String?     @db.Text
  type            ProductType
  stripeProductId String?     @unique
  stripePriceId   String?
  price           Int // cents
  active          Boolean     @default(true)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  orders          Order[]
}

model MembershipPlan {
  id              Int      @id @default(autoincrement())
  name            String
  description     String?  @db.Text
  stripeProductId String?  @unique
  stripePriceId   String?
  price           Int // cents per month
  interval        String   @default("month")
  active          Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Order {
  id                    Int         @id @default(autoincrement())
  userId                Int?
  user                  User?       @relation(fields: [userId], references: [id])
  productId             Int?
  product               Product?    @relation(fields: [productId], references: [id])
  stripeSessionId       String?     @unique
  stripePaymentIntentId String?
  amount                Int // cents
  status                OrderStatus @default(PENDING)
  createdAt             DateTime    @default(now())
  updatedAt             DateTime    @updatedAt

  @@index([userId])
  @@index([stripeSessionId])
}

model DailyEvent {
  id             Int               @id @default(autoincrement())
  title          String
  description    String?
  startTime      String            // Format: "HH:MM" e.g., "12:00"
  endTime        String            // Format: "HH:MM" e.g., "20:00"
  daysOfWeek     Int[]             // Array of days: 0=Sunday, 1=Monday, etc.
  type           DailyEventType    @default(FACILITY)
  displayStyle   EventDisplayStyle @default(NORMAL)
  overridesOthers Boolean          @default(false) // For CLOSED days - hides other events
  spaceId        Int?
  space          Space?            @relation(fields: [spaceId], references: [id])
  isActive       Boolean           @default(true)
  published      Boolean           @default(true)
  showInCalendar Boolean           @default(true) // Whether to show in the calendar grid or above
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
}

enum DailyEventType {
  FACILITY  // Regular facility hours (cafe, sauna, etc)
  CLOSED    // Venue closed
}

model MultiDayEvent {
  id               Int                      @id @default(autoincrement())
  title            String
  slug             String                   @unique
  description      String?                  @db.Text
  startDate        DateTime
  endDate          DateTime
  posterImage      String?                  // URL to poster image
  type             MultiDayEventType        @default(FESTIVAL)
  websiteUrl       String?
  facebookUrl      String?
  instagramUrl     String?
  published        Boolean                  @default(false)
  featured         Boolean                  @default(false) // Show on home page
  sections         MultiDayEventSection[]
  createdAt        DateTime                 @default(now())
  updatedAt        DateTime                 @updatedAt

  @@index([slug])
  @@index([startDate, endDate])
}

model MultiDayEventSection {
  id               Int            @id @default(autoincrement())
  multiDayEventId  Int
  multiDayEvent    MultiDayEvent  @relation(fields: [multiDayEventId], references: [id], onDelete: Cascade)
  title            String
  description      String?        @db.Text
  imageUrl         String?
  order            Int            @default(0) // For sorting sections
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  @@index([multiDayEventId])
}

enum MultiDayEventType {
  FESTIVAL
  INTENSIVE
  RETREAT
}
